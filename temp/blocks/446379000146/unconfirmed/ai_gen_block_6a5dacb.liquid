{% doc %}
  @prompt
    create a fancy section that displays ingredients, make it much more compact, dont use icons

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ingredients-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-ingredients-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-ingredients-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-ingredients-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px;font-weight: 600;
  }

  .ai-ingredients-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-ingredients-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-ingredient-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    border: 1px solid {{ block.settings.card_border_color }};
    transition: transform 0.2s ease;
  }

  .ai-ingredient-card-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
  }

  .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    color: {{ block.settings.ingredient_name_color }};
    font-weight: 600;
    margin: 0 0 4px;
  }

  .ai-ingredient-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_description_size }}px;
    color: {{ block.settings.ingredient_description_color }};
    line-height: 1.4;
    margin: 0;}

  .ai-ingredient-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.subtitle_color }};
    opacity: 0.6;
  }

  .ai-ingredient-empty-state-{{ ai_gen_id }} h3 {
    font-size: 16px;
    margin: 0 0 4px;
    color: {{ block.settings.title_color }};
  }

  .ai-ingredient-empty-state-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-ingredients-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-ingredients-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-ingredient-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-ingredients-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ingredients-container-{{ ai_gen_id }}">
    <div class="ai-ingredients-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-ingredients-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="ai-ingredients-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}
    </div>

    {% assign has_ingredients = false %}
    {% for i in (1..8) %}
      {% assign ingredient_name_key = 'ingredient_' | append: i | append: '_name' %}
      {% assign ingredient_name = block.settings[ingredient_name_key] %}
      {% if ingredient_name != blank %}
        {% assign has_ingredients = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_ingredients %}
      <div class="ai-ingredients-grid-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% liquid
            assign ingredient_name_key = 'ingredient_' | append: i | append: '_name'
            assign ingredient_description_key = 'ingredient_' | append: i | append: '_description'
            
            assign ingredient_name = block.settings[ingredient_name_key]
            assign ingredient_description = block.settings[ingredient_description_key]
          %}

          {% if ingredient_name != blank %}
            <div class="ai-ingredient-card-{{ ai_gen_id }}">
              <h3 class="ai-ingredient-name-{{ ai_gen_id }}">{{ ingredient_name }}</h3>
              {% if ingredient_description != blank %}
                <div class="ai-ingredient-description-{{ ai_gen_id }}">{{ ingredient_description }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-ingredient-empty-state-{{ ai_gen_id }}">
        <h3>Ready to showcase your ingredients</h3>
        <p>Add ingredient names to get started</p>
      </div>
    {% endif %}
  </div>
</div>

