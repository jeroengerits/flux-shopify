{% doc %}
  @prompt
    create a fancy section that displays ingredients

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ingredients-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-ingredients-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-ingredients-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-ingredients-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .ai-ingredients-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
    max-width: 600px;margin-left: auto;
    margin-right: auto;
    line-height: 1.5;
  }

  .ai-ingredients-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-ingredient-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};overflow: hidden;
  }

  .ai-ingredient-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .ai-ingredient-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, {{ block.settings.accent_color_1 }}, {{ block.settings.accent_color_2 }});
    opacity: {{ block.settings.accent_opacity | divided_by: 100.0 }};
  }

  .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.image_size }}px;
    height: {{ block.settings.image_size }}px;
    margin: 0 auto 20px;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, {{ block.settings.image_bg_1 }}, {{ block.settings.image_bg_2 }});
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-ingredient-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-ingredient-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
    color: {{ block.settings.placeholder_color }};
  }

  .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_name_size }}px;
    color: {{ block.settings.ingredient_name_color }};
    font-weight: 600;
    margin: 0 0 12px;
    letter-spacing: -0.01em;
  }

  .ai-ingredient-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.ingredient_description_size }}px;
    color: {{ block.settings.ingredient_description_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  .ai-ingredients-background-decoration-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.03;
    z-index: 1;
    pointer-events: none;
  }

  .ai-ingredients-background-decoration-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 30% 70%, {{ block.settings.accent_color_1 }} 0%, transparent 50%),
                radial-gradient(circle at 70% 30%, {{ block.settings.accent_color_2 }} 0%, transparent 50%);
    animation: ai-ingredients-float-{{ ai_gen_id }} 20s ease-in-out infinite;
  }

  @keyframes ai-ingredients-float-{{ ai_gen_id }} {
    0%, 100% { transform: rotate(0deg) scale(1); }
    50% { transform: rotate(180deg) scale(1.1); }
  }

  .ai-ingredient-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.subtitle_color }};
    opacity: 0.6;
  }

  .ai-ingredient-empty-state-{{ ai_gen_id }} h3 {
    font-size: 18px;
    margin: 0 0 8px;
    color: {{ block.settings.title_color }};
  }

  .ai-ingredient-empty-state-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-ingredients-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);gap: {{ block.settings.grid_gap | times: 0.8 }}px;
    }

    .ai-ingredients-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-ingredient-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size | times: 0.8 }}px;
      height: {{ block.settings.image_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-ingredients-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ingredients-background-decoration-{{ ai_gen_id }}"></div>
  
  <div class="ai-ingredients-container-{{ ai_gen_id }}">
    <div class="ai-ingredients-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-ingredients-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="ai-ingredients-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}
    </div>

    {% assign has_ingredients = false %}
    {% for i in (1..6) %}
      {% assign ingredient_name_key = 'ingredient_' | append: i | append: '_name' %}
      {% assign ingredient_name = block.settings[ingredient_name_key] %}
      {% if ingredient_name != blank %}
        {% assign has_ingredients = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_ingredients %}
      <div class="ai-ingredients-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign ingredient_name_key = 'ingredient_' | append: i | append: '_name'
            assign ingredient_description_key = 'ingredient_' | append: i | append: '_description'
            assign ingredient_image_key = 'ingredient_' | append: i | append: '_image'
            
            assign ingredient_name = block.settings[ingredient_name_key]
            assign ingredient_description = block.settings[ingredient_description_key]
            assign ingredient_image = block.settings[ingredient_image_key]
          %}

          {% if ingredient_name != blank %}
            <div class="ai-ingredient-card-{{ ai_gen_id }}">
              <div class="ai-ingredient-image-wrapper-{{ ai_gen_id }}">
                {% if ingredient_image %}
                  <img
                    src="{{ ingredient_image | image_url: width: 200}}"
                    alt="{{ ingredient_image.alt | default: ingredient_name | escape }}"
                    class="ai-ingredient-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  <div class="ai-ingredient-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <h3 class="ai-ingredient-name-{{ ai_gen_id }}">{{ ingredient_name }}</h3>
              
              {% if ingredient_description != blank %}
                <div class="ai-ingredient-description-{{ ai_gen_id }}">{{ ingredient_description }}</div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-ingredient-empty-state-{{ ai_gen_id }}">
        <h3>Ready to showcase your ingredients</h3>
        <p>Add ingredient names and descriptions to get started</p>
      </div>
    {% endif %}
  </div>
</div>

