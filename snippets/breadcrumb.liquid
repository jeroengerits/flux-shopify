{% comment %}
  Reusable Breadcrumb Snippet
  Usage: {% render 'breadcrumb', show_home: true, custom_items: custom_breadcrumb_array %}

  Parameters:
  - show_home: boolean, whether to show the home link (default: true)
  - custom_items: array of breadcrumb items with 'title' and 'url' properties
  - current_title: string, the current page title (default: page.title)
  - current_url: string, the current page URL (default: page.url)
{% endcomment %}

{%- liquid
  assign current_title = current_title | default: page.title
  assign current_url = current_url | default: page.url

  if template == 'product'
    assign current_title = product.title
    assign current_url = product.url
  elsif template == 'collection'
    assign current_title = collection.title
    assign current_url = collection.url
  elsif template == 'blog'
    assign current_title = blog.title
    assign current_url = blog.url
  elsif template == 'article'
    assign current_title = article.title
    assign current_url = article.url
  endif
-%}

<nav class='flex items-center gap-2 text-sm' aria-label='Breadcrumb'>
  {%- if show_home -%}
    <a
      href='{{ routes.root_url }}'
      class='text-brand-neutral-600 hover:text-brand-neutral-900 transition-colors duration-200'
    >
      Home
    </a>

    {%- if custom_items != null or current_title != blank -%}
      <svg
        class='text-brand-neutral-400 block h-3 w-3 rtl:rotate-180'
        aria-hidden='true'
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 6 10'
      >
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m1 9 4-4-4-4"/>
      </svg>
    {%- endif -%}
  {%- endif -%}

  {%- comment -%} Custom breadcrumb items {%- endcomment -%}
  {%- if custom_items != null -%}
    {%- for item in custom_items -%}
      <a
        href='{{ item.url }}'
        class='text-brand-neutral-600 hover:text-brand-neutral-900 transition-colors duration-200'
      >
        {{ item.title }}
      </a>

      {%- unless forloop.last or current_title == blank -%}
        <svg
          class='text-brand-neutral-400 block h-3 w-3 rtl:rotate-180'
          aria-hidden='true'
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 6 10'
        >
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m1 9 4-4-4-4"/>
        </svg>
      {%- endunless -%}
    {%- endfor -%}
  {%- endif -%}

  {%- comment -%} Current page title {%- endcomment -%}
  {%- if current_title != blank -%}
    {%- if custom_items != null -%}
      <svg
        class='text-brand-neutral-400 block h-3 w-3 rtl:rotate-180'
        aria-hidden='true'
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 6 10'
      >
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="m1 9 4-4-4-4"/>
      </svg>
    {%- endif -%}

    <span class='text-brand-neutral-900 font-medium' aria-current='page'>
      {{ current_title }}
    </span>
  {%- endif -%}
</nav>
