{% comment %}
  Link Snippet
  Usage: {% render 'link', text: 'Link Text', url: '/path', external: false, disabled: false %}

  Parameters:
  - text: Link text content
  - url: Link destination URL
  - external: Whether link opens in new tab (default: false)
  - disabled: Whether link is disabled (default: false)
{% endcomment %}

{% assign text = text | default: 'Link' %}
{% assign url = url | default: '#' %}
{% assign external = external | default: false %}
{% assign disabled = disabled | default: false %}

{% if disabled %}
  {% assign link_classes = 'text-brand-neutral-400 cursor-not-allowed pointer-events-none' %}
{% else %}
  {% assign link_classes = 'text-brand-neutral-600 hover:text-brand-neutral-900 transition-colors' %}
{% endif %}

{% if external %}
  {% assign target_attr = 'target="_blank" rel="noopener noreferrer"' %}
{% else %}
  {% assign target_attr = '' %}
{% endif %}

{% if disabled %}
  <span class='{{ link_classes }}'>
    {{ text }}
    {% if external %}
      <svg class='ml-2 inline h-4 w-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14'></path>
      </svg>
    {% endif %}
  </span>
{% else %}
  <a href='{{ url }}' class='{{ link_classes }} inline-flex items-center' {{ target_attr }}>
    {{ text }}
    {% if external %}
      <svg class='ml-2 h-4 w-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14'></path>
      </svg>
    {% endif %}
  </a>
{% endif %}
