{% comment %}
  Product Card Snippet
  {% render 'product-card', product: product %}
{% endcomment %}

<article>
  <a
    href='{{ product.url }}'
    class='border-brand-neutral-200 group block overflow-hidden rounded-xl border bg-white transition-shadow hover:shadow-sm'
  >
    <!-- Product Image -->
    <div class='overflow-hidden'>
      {% if product.featured_image %}
        <img
          src='{{ product.featured_image | image_url: width: image_width, height: image_height, crop: 'center' }}'
          width='{{ image_width }}'
          height='{{ image_height }}'
          alt='{{ product.title | escape }}'
          loading='lazy'
          decoding='async'
          class='transition-transform  group-hover:scale-110'
        >
      {% else %}
        <div>
          <svg width='64' height='64' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      {% endif %}
    </div>
    <!-- Product Info -->
    <div class='px-4 py-3'>
      <div class='flex flex-row items-start justify-between'>
        <div class='flex flex-col gap-1'>
          {% render 'item-title', text: product.title %}
          {% render 'item-subtitle', text: product.type %}
        </div>
        <div class='flex flex-col items-end'>
          {% render 'item-price', amount: product.price, size: 'md', weight: 'semibold', color: 'primary' %}
        </div>
      </div>
    </div>
  </a>
</article>
