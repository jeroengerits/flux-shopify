{% comment %}
  Design System Template
  Showcases all available snippets and sections as design system examples
{% endcomment %}

<div class='bg-brand-neutral-50 min-h-screen'>
  <!-- Header -->
  <div class='border-brand-neutral-200 border-b bg-white'>
    <div class='px-6 py-6'>
      <h1 class='text-brand-neutral-900 mb-2 text-3xl font-bold'>Design System</h1>
      <p class='text-brand-neutral-600 text-base'>Complete component library for Flux Shopify theme</p>
    </div>
  </div>

  <div class='px-6 py-6'>
    <!-- Navigation -->
    <nav class='mb-8'>
      <div class='flex flex-wrap gap-3'>
        <a
          href='#typography'
          class='bg-brand-primary hover:bg-brand-neutral-800 rounded-md px-3 py-2 text-sm text-white transition-colors'
          >Typography</a
        >
        <a
          href='#buttons'
          class='bg-brand-neutral-100 text-brand-neutral-700 hover:bg-brand-neutral-200 rounded-md px-3 py-2 text-sm transition-colors'
          >Buttons</a
        >
        <a
          href='#components'
          class='bg-brand-neutral-100 text-brand-neutral-700 hover:bg-brand-neutral-200 rounded-md px-3 py-2 text-sm transition-colors'
          >Components</a
        >
        <a
          href='#colors'
          class='bg-brand-neutral-100 text-brand-neutral-700 hover:bg-brand-neutral-200 rounded-md px-3 py-2 text-sm transition-colors'
          >Colors</a
        >
        <a
          href='#spacing'
          class='bg-brand-neutral-100 text-brand-neutral-700 hover:bg-brand-neutral-200 rounded-md px-3 py-2 text-sm transition-colors'
          >Spacing</a
        >
      </div>
    </nav>

    <!-- Typography Section -->
    <section id='typography' class='mb-12'>
      <div class='border-brand-neutral-200 rounded-lg border bg-white p-6'>
        <h2 class='text-brand-neutral-900 mb-4 text-xl font-bold'>Typography</h2>
        <div class='grid gap-4 md:grid-cols-2'>
          <div>
            <h1 class='text-brand-neutral-900 mb-1 text-3xl font-bold'>Heading 1</h1>
            <p class='text-brand-neutral-500 text-xs'>text-3xl font-bold</p>
          </div>
          <div>
            <h2 class='text-brand-neutral-900 mb-1 text-xl font-semibold'>Heading 2</h2>
            <p class='text-brand-neutral-500 text-xs'>text-xl font-semibold</p>
          </div>
          <div>
            <p class='text-brand-neutral-700 mb-1 text-base'>Body text</p>
            <p class='text-brand-neutral-500 text-xs'>text-base text-neutral-700</p>
          </div>
          <div>
            <p class='text-brand-neutral-500 mb-1 text-sm'>Small text</p>
            <p class='text-brand-neutral-500 text-xs'>text-sm text-neutral-500</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Buttons Section -->
    <section id='buttons' class='mb-12'>
      <div class='border-brand-neutral-200 rounded-lg border bg-white p-6'>
        <h2 class='text-brand-neutral-900 mb-4 text-xl font-bold'>Buttons</h2>

        <!-- Variants -->
        <div class='mb-6'>
          <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold uppercase tracking-wide'>Variants</h3>
          <div class='flex flex-wrap gap-3'>
            {% render 'button', label: 'Primary', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'Secondary', variant: 'secondary', size: 'sm' %}
            {% render 'button', label: 'Outline', variant: 'outline', size: 'sm' %}
            {% render 'button', label: 'Ghost', variant: 'ghost', size: 'sm' %}
          </div>
        </div>

        <!-- Sizes -->
        <div class='mb-6'>
          <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold uppercase tracking-wide'>Sizes</h3>
          <div class='flex flex-wrap items-center gap-3'>
            {% render 'button', label: 'XS', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'S', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'M', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'L', variant: 'primary', size: 'sm' %}
          </div>
        </div>

        <!-- States -->
        <div>
          <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold uppercase tracking-wide'>States</h3>
          <div class='flex flex-wrap gap-3'>
            {% render 'button', label: 'Normal', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'Disabled', variant: 'primary', size: 'sm', disabled: true %}
            {% render 'button', label: 'Full Width', variant: 'primary', size: 'sm', full_width: true %}
          </div>
        </div>
      </div>
    </section>

    <!-- Components Section -->
    <section id='components' class='mb-12'>
      <div class='border-brand-neutral-200 rounded-lg border bg-white p-6'>
        <h2 class='text-brand-neutral-900 mb-4 text-xl font-bold'>Components</h2>

        <div class='grid gap-6 md:grid-cols-2'>
          <!-- Section Title -->
          <div>
            <h3 class='text-brand-neutral-700 mb-2 text-sm font-semibold'>Section Title</h3>
            <div class='bg-brand-neutral-50 rounded p-3'>
              {% render 'section-title', text: 'Example Title' %}
            </div>
            <p class='text-brand-neutral-500 mt-2 text-xs'>
              {% raw %}{% render 'section-title', text: 'Title' %}{% endraw %}
            </p>
          </div>

          <!-- Item Title -->
          <div>
            <h3 class='text-brand-neutral-700 mb-2 text-sm font-semibold'>Item Title</h3>
            <div class='bg-brand-neutral-50 rounded p-3'>
              {% render 'item-title', text: 'Product Title' %}
            </div>
            <p class='text-brand-neutral-500 mt-2 text-xs'>
              {% raw %}{% render 'section-title', text: 'Title' %}{% endraw %}
            </p>
          </div>

          <!-- Item Price -->
          <div>
            <h3 class='text-brand-neutral-700 mb-2 text-sm font-semibold'>Item Price</h3>
            <div class='bg-brand-neutral-50 space-y-2 rounded p-3'>
              <div class='flex items-center gap-2'>
                <span class='text-brand-neutral-500 text-xs'>S:</span>
                {% render 'item-price', amount: 2999, size: 'sm' %}
              </div>
              <div class='flex items-center gap-2'>
                <span class='text-brand-neutral-500 text-xs'>L:</span>
                {% render 'item-price', amount: 2999, size: 'lg', weight: 'bold' %}
              </div>
            </div>
            <p class='text-brand-neutral-500 mt-2 text-xs'>
              {% raw %}{% render 'item-price', amount: price, size: 'md' %}{% endraw %}
            </p>
          </div>

          <!-- Product Card -->
          <div>
            <h3 class='text-brand-neutral-700 mb-2 text-sm font-semibold'>Product Card</h3>
            <div class='bg-brand-neutral-50 rounded p-3'>
              {% if all_products.first %}
                {% render 'product-card', product: all_products.first %}
              {% else %}
                <div class='border-brand-neutral-200 rounded border bg-white p-3 text-center'>
                  <p class='text-brand-neutral-500 text-sm'>No products available</p>
                </div>
              {% endif %}
            </div>
            <p class='text-brand-neutral-500 mt-2 text-xs'>
              {% raw %}{% render 'product-card', product: product %}{% endraw %}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Color Palette -->
    <section id='colors' class='mb-12'>
      <div class='rounded-lg border border-neutral-200 bg-white p-6'>
        <h2 class='text-brand-neutral-900 mb-4 text-xl font-bold'>Color Palette</h2>

        <div class='grid gap-6 md:grid-cols-3'>
          <!-- Neutral Colors -->
          <div>
            <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold'>Neutral Colors</h3>
            <div class='space-y-2'>
              <div class='flex items-center gap-2'>
                <div class='h-6 w-6 rounded border border-neutral-200 bg-neutral-50'></div>
                <span class='text-xs'>neutral-50</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='h-6 w-6 rounded bg-neutral-200'></div>
                <span class='text-xs'>neutral-200</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='h-6 w-6 rounded bg-neutral-500'></div>
                <span class='text-xs text-white'>neutral-500</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='h-6 w-6 rounded bg-neutral-900'></div>
                <span class='text-xs text-white'>neutral-900</span>
              </div>
            </div>
          </div>

          <!-- Text Colors -->
          <div>
            <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold'>Text Colors</h3>
            <div class='space-y-2'>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-900 h-6 w-6 rounded'></div>
                <span class='text-xs'>text-brand-neutral-900</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-700 h-6 w-6 rounded'></div>
                <span class='text-xs text-white'>text-brand-neutral-700</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-500 h-6 w-6 rounded'></div>
                <span class='text-xs text-white'>text-brand-neutral-500</span>
              </div>
            </div>
          </div>

          <!-- Status Colors -->
          <div>
            <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold'>Status Colors</h3>
            <div class='space-y-2'>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-success h-6 w-6 rounded'></div>
                <span class='text-xs text-white'>Success</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-error h-6 w-6 rounded'></div>
                <span class='text-xs text-white'>Error</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-warning h-6 w-6 rounded'></div>
                <span class='text-xs text-white'>Warning</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Spacing Scale -->
    <section id='spacing' class='mb-12'>
      <div class='border-brand-neutral-200 rounded-lg border bg-white p-6'>
        <h2 class='text-brand-neutral-900 mb-4 text-xl font-bold'>Spacing Scale</h2>

        <div class='grid gap-6 md:grid-cols-2'>
          <!-- Padding & Margin -->
          <div>
            <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold'>Padding & Margin</h3>
            <div class='space-y-2'>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-3 w-3 rounded'></div>
                <span class='text-xs'>p-1 (0.25rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-4 w-4 rounded'></div>
                <span class='text-xs'>p-2 (0.5rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-6 w-6 rounded'></div>
                <span class='text-xs'>p-4 (1rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-8 w-8 rounded'></div>
                <span class='text-xs'>p-6 (1.5rem)</span>
              </div>
            </div>
          </div>

          <!-- Gap -->
          <div>
            <h3 class='text-brand-neutral-700 mb-3 text-sm font-semibold'>Gap</h3>
            <div class='space-y-2'>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-2 w-2 rounded'></div>
                <span class='text-xs'>gap-1 (0.25rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-4 w-4 rounded'></div>
                <span class='text-xs'>gap-2 (0.5rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-6 w-6 rounded'></div>
                <span class='text-xs'>gap-4 (1rem)</span>
              </div>
              <div class='flex items-center gap-2'>
                <div class='bg-brand-neutral-200 h-8 w-8 rounded'></div>
                <span class='text-xs'>gap-6 (1.5rem)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
