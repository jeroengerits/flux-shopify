<div class="flex flex-col items-start gap-12 px-6 md:flex-row">
  <div class="w-full md:w-1/2">
    <img
      class="w-full rounded-xl"
      src="{{ product.featured_image | image_url: width: 800 }}"
      alt="{{ product.featured_image.alt }}"
    >
  </div>
  <div class="flex w-full flex-col gap-2 md:w-1/2 md:pr-6 md:pt-6">
    <h1 class="whitespace-nowrap text-xl  font-medium text-neutral-800">
      {{ product.title }}
    </h1>
    <div class="mb-2 text-base text-neutral-500">
      <p>
        {{ product.type }}
      </p>
    </div>
    <div class="whitespace-nowrap  text-3xl  font-bold text-neutral-800">
      <p>
        {{ product.price | money }}
      </p>
    </div>
    <div class="mb-6 mt-4 text-base text-neutral-500">
      <p>
        {{ product.description }}
      </p>
    </div>
    {% form 'product', product %}
      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
      <button class="inline-flex rounded-lg bg-neutral-700 px-6 py-4 text-lg font-medium text-white transition-colors duration-200 hover:bg-neutral-800 ">
        Add to cart
      </button>
    {% endform %}
  </div>
</div>
