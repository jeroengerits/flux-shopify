{% comment %}
  404 Error Page Template
  Shows when a page is not found
{% endcomment %}

<div class="flex items-center justify-center px-6 py-32">
  <div class="mx-auto max-w-sm text-center">
    <!-- Error Message -->
    <h1 class="mb-4 text-6xl font-bold text-neutral-800">404</h1>
    <h2 class="mb-4 text-2xl font-semibold text-neutral-600">Page Not Found</h2>
    <p class="mb-8 text-neutral-500">Sorry, the page you're looking for doesn't exist or has been moved.</p>

    <!-- Navigation Options -->
    <div class="space-y-4">
      <!-- Go Home Button -->
      <a
        href="/"
        class="inline-flex w-full items-center justify-center rounded-lg bg-neutral-800 px-6 py-3 font-medium text-white transition-colors duration-200 hover:bg-neutral-900"
      >
        Go to Home
      </a>
    </div>
  </div>
</div>
