{% comment %}
  404 Error Page Template
  Shows when a page is not found
{% endcomment %}

<div class='flex items-center justify-center px-6 py-32'>
  <div class='mx-auto max-w-sm text-center'>
    <h1 class='text-brand-neutral-800 mb-4 text-6xl font-bold'>404</h1>
    <h2 class='text-brand-neutral-600 mb-4 text-2xl font-semibold'>Page Not Found</h2>
    <p class='text-brand-neutral-500 mb-8'>Sorry, the page you're looking for doesn't exist or has been moved.</p>
    <div class='space-y-4'>
      <a
        href='/'
        class='bg-brand-primary hover:bg-brand-neutral-900 inline-flex w-full items-center justify-center rounded-lg px-6 py-3 font-medium text-white transition-colors duration-200'
      >
        Go to Home
      </a>
    </div>
  </div>
</div>
