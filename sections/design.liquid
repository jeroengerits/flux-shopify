<div>
  <div class=' px-6'>
    <!-- Buttons -->
    <section class='mb-20'>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Buttons</h2>

        <!-- Variants -->
        <div class='mb-10'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Variants</h3>
          <div class='flex flex-wrap gap-6'>
            {% render 'button', label: 'Primary', variant: 'primary', size: 'md' %}
            {% render 'button', label: 'Secondary', variant: 'secondary', size: 'md' %}
            {% render 'button', label: 'Outline', variant: 'outline', size: 'md' %}
            {% render 'button', label: 'Ghost', variant: 'ghost', size: 'md' %}
          </div>
        </div>

        <!-- Sizes -->
        <div class='mb-10'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Sizes</h3>
          <div class='flex flex-wrap items-center gap-6'>
            {% render 'button', label: 'Small', variant: 'primary', size: 'sm' %}
            {% render 'button', label: 'Medium', variant: 'primary', size: 'md' %}
            {% render 'button', label: 'Large', variant: 'primary', size: 'lg' %}
          </div>
        </div>

        <!-- States -->
        <div>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>States</h3>
          <div class='flex flex-wrap gap-6'>
            {% render 'button', label: 'Normal', variant: 'primary', size: 'md' %}
            {% render 'button', label: 'Disabled', variant: 'primary', size: 'md', disabled: true %}
            {% render 'button', label: 'Full Width', variant: 'primary', size: 'md', full_width: true %}
          </div>
        </div>
      </div>
    </section>

    <!-- Tags -->
    <section class='mb-20'>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Tags</h2>

        <!-- Variants -->
        <div class='mb-10'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Variants</h3>
          <div class='flex flex-wrap gap-4'>
            {% render 'tag', text: 'Default', variant: 'default', color: 'primary' %}
            {% render 'tag', text: 'Rounded', variant: 'rounded', color: 'secondary' %}
            {% render 'tag', text: 'Pill', variant: 'pill', color: 'success' %}
            {% render 'tag', text: 'Outline', variant: 'outline', color: 'primary' %}
          </div>
        </div>

        <!-- Colors -->
        <div class='mb-10'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Colors</h3>
          <div class='flex flex-wrap gap-4'>
            {% render 'tag', text: 'Neutral', variant: 'default', color: 'neutral' %}
            {% render 'tag', text: 'Primary', variant: 'default', color: 'primary' %}
            {% render 'tag', text: 'Secondary', variant: 'default', color: 'secondary' %}
            {% render 'tag', text: 'Success', variant: 'default', color: 'success' %}
            {% render 'tag', text: 'Warning', variant: 'default', color: 'warning' %}
            {% render 'tag', text: 'Error', variant: 'default', color: 'error' %}
          </div>
        </div>

        <!-- Sizes -->
        <div class='mb-10'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Sizes</h3>
          <div class='flex flex-wrap items-center gap-4'>
            {% render 'tag', text: 'Extra Small', variant: 'default', size: 'xs', color: 'primary' %}
            {% render 'tag', text: 'Small', variant: 'default', size: 'sm', color: 'primary' %}
            {% render 'tag', text: 'Medium', variant: 'default', size: 'md', color: 'primary' %}
            {% render 'tag', text: 'Large', variant: 'default', size: 'lg', color: 'primary' %}
          </div>
        </div>

        <!-- Mixed Examples -->
        <div>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Mixed Examples</h3>
          <div class='flex flex-wrap gap-4'>
            {% render 'tag', text: 'New', variant: 'pill', color: 'success' %}
            {% render 'tag', text: 'Sale', variant: 'outline', color: 'error' %}
            {% render 'tag', text: 'Featured', variant: 'rounded', color: 'warning' %}
            {% render 'tag', text: 'Limited', variant: 'default', color: 'secondary' %}
            {% render 'tag', text: 'Popular', variant: 'pill', color: 'primary' %}
            {% render 'tag', text: 'Trending', variant: 'outline', color: 'success' %}
          </div>
        </div>
      </div>
    </section>

    <!-- Paragraphs -->
    <section class='mb-20'>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Paragraphs</h2>

        <div class='space-y-8'>
          <div>
            <h3 class='mb-4 text-sm font-semibold uppercase tracking-wider text-gray-700'>Default</h3>
            <div class='rounded-xl border border-gray-100 bg-gray-50 p-6'>
              {% render 'paragraph',
                text: 'This is a standard paragraph that demonstrates the default styling and spacing for body text content.'
              %}
            </div>
          </div>

          <div>
            <h3 class='mb-4 text-sm font-semibold uppercase tracking-wider text-gray-700'>Long Text</h3>
            <div class='rounded-xl border border-gray-100 bg-gray-50 p-6'>
              {% render 'paragraph',
                text: 'This is a longer paragraph example that shows how the component handles extended content. It demonstrates proper line height, spacing, and readability for longer text blocks that might be used in product descriptions, blog posts, or other content areas.'
              %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Cart Icon -->
    <section class='mb-20'>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Cart Icon</h2>
        <!-- Amount Examples -->
        <div class='mb-'>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Examples</h3>
          <div class='flex flex-wrap gap-8'>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Empty Cart</h4>
              {% render 'cart-icon', amount: 0, show_label: true %}
            </div>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Single Item</h4>
              {% render 'cart-icon', amount: 1, show_label: true %}
            </div>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Multiple Items</h4>
              {% render 'cart-icon', amount: 8, show_label: true %}
            </div>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Large Amount</h4>
              {% render 'cart-icon', amount: 150, show_label: true %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Links -->
    <section class='mb-20'>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Links</h2>
        <!-- States -->
        <div class=''>
          <h3 class='mb-6 text-sm font-semibold uppercase tracking-wider text-gray-700'>Examples</h3>
          <div class='flex flex-wrap gap-6'>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Normal</h4>
              {% render 'link', text: 'Normal Link', url: '#' %}
            </div>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>Disabled</h4>
              {% render 'link', text: 'Disabled Link', url: '#', disabled: true %}
            </div>
            <div class='text-center'>
              <h4 class='mb-3 text-sm font-medium text-gray-600'>External</h4>
              {% render 'link', text: 'External Link', url: '#', external: true %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Usage Examples -->
    <section>
      <div class='rounded-2xl border border-gray-200 bg-white p-10 shadow-lg'>
        <h2 class='mb-10 text-3xl font-bold text-gray-900'>Usage Examples</h2>

        <div class='space-y-12'>
          <!-- Product Card with Tags -->
          <div>
            <h3 class='mb-6 text-xl font-semibold text-gray-900'>Product Card with Tags</h3>
            <div class='rounded-2xl border border-gray-200 bg-gradient-to-br from-gray-50 to-gray-100 p-8'>
              <div class='mx-auto max-w-sm'>
                <div class='overflow-hidden rounded-xl border border-gray-200 bg-white shadow-md transition-shadow duration-300 hover:shadow-lg'>
                  <div class='flex aspect-square items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200'>
                    <span class='text-sm font-medium text-gray-400'>Product Image</span>
                  </div>
                  <div class='p-6'>
                    <h4 class='mb-2 text-lg font-semibold text-gray-900'>Example Product</h4>
                    <p class='mb-4 text-sm text-gray-600'>Product Category</p>
                    <div class='mb-4 flex items-center justify-between'>
                      <span class='text-xl font-bold text-gray-900'>$29.99</span>
                      <div class='flex gap-2'>
                        {% render 'tag', text: 'New', variant: 'outline', color: 'success' %}
                        {% render 'tag', text: 'Sale', variant: 'outline', color: 'error' %}
                      </div>
                    </div>
                    {% render 'button', label: 'Add to Cart', variant: 'primary', size: 'md', full_width: true %}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Content Section -->
          <div>
            <h3 class='mb-6 text-xl font-semibold text-gray-900'>Content Section</h3>
            <div class='rounded-2xl border border-gray-200 bg-gradient-to-br from-gray-50 to-gray-100 p-8'>
              <div class='mx-auto max-w-3xl'>
                <h3 class='mb-6 text-2xl font-bold text-gray-900'>Section Title</h3>
                <div class='mb-6 rounded-xl border border-gray-200 bg-white p-6'>
                  {% render 'paragraph',
                    text: 'This is an example of how to combine multiple components together. You can use paragraphs for descriptive text, buttons for actions, and tags for highlighting important information.'
                  %}
                </div>
                <div class='flex justify-center gap-4'>
                  {% render 'button', label: 'Learn More', variant: 'outline', size: 'md' %}
                  {% render 'button', label: 'Get Started', variant: 'primary', size: 'md' %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
